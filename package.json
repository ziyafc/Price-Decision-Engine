{
  "name": "price-decision-engine",
  "version": "1.0.0",
  "description": "A minimal Node.js web application with PriceEngine.",
  "main": "app.js",
  "author": "alphasec",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "scripts": {
    "dev:engine": "nodemon -w packages/price-engine/src -x \"node packages/price-engine/src/workers/cronRunner.js\"",
    "dev:api": "nodemon -w apps/api/src -x \"node apps/api/src/server.js\"",
    "dev": "npm-run-all --parallel dev:*",
    "start:engine": "node packages/price-engine/src/workers/cronRunner.js",
    "start:api": "node apps/api/src/server.js",
    "start": "npm-run-all --parallel start:*"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5"
  }
}
